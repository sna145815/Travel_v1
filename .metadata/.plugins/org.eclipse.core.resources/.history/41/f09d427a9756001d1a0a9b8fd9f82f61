    	String result = "";
    	
        StringBuilder urlBuilder = new StringBuilder(https://apis.data.go.kr/6300000/tourDataService/tourDataListJson?serviceKey=EloQZYEza8o2Xb9BpwS9yRNo5AsAcYgSEOg86qw3D29sCXlhu43QUF6lwcf9GV%2BY5ckcR2JWgmh3FqHbICmyEA%3D%3D&searchKeyword=%EB%BF%8C%EB%A6%AC%EA%B3%B5%EC%9B%90);
        
       // urlBuilder.append("?" + URLEncoder.encode("serviceKey","UTF-8") + "EloQZYEza8o2Xb9BpwS9yRNo5AsAcYgSEOg86qw3D29sCXlhu43QUF6lwcf9GV%2BY5ckcR2JWgmh3FqHbICmyEA%3D%3D"); /*Service Key*/
       // urlBuilder.append("&" + URLEncoder.encode("dcode","UTF-8") + "=" + URLEncoder.encode("C0101", "UTF-8")); /*서비스분류코드표관광자원분류탭참조*/
       // urlBuilder.append("&" + URLEncoder.encode("searchCondition","UTF-8") + "=" + URLEncoder.encode("1", "UTF-8")); /*(1:관광자원명 , 2:소개)*/
