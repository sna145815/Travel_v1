package controller;

import java.io.IOException;

import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;

import service.userservice;

@WebServlet("/update")
public class updateusercontroller extends HttpServlet{
	private static final long serialVersionUID = 1L;
    
	   
    public updateusercontroller() {
        
    }

	
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		String pwd = request.getParameter("pwd");
		String uppwd = "bbb";
		String uppwdr = "bbb";
		//String uppwd = request.getParameter("uppwd");
		//String uppwdr = request.getParameter("uppwdr");
		
		HttpSession session = request.getSession(); 
		String id = (String) session.getAttribute("id");
				
		userservice service = new userservice();
		
		if(service.Checkpwd("vvv", "aaa") == 1)
		{
			if(uppwd.equals(uppwdr))
			{
				if(service.Updatepwd(uppwd, "aaa") == 1)
				{
					request.setAttribute("pwdResult", true);
				}
				else 
				{	
					request.setAttribute("pwdResult", false);
				}
				RequestDispatcher rq = request.getRequestDispatcher("WEB-INF/view/updateuser.jsp");
				rq.forward(request, response);
			}
		} 
		else
		{
			RequestDispatcher rq = request.getRequestDispatcher("WEB-INF/view/updateuser.jsp");
		    rq.forward(request, response);
		}
	}


	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
	
	}

}
