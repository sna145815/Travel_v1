package DB;

import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Connection;

public class DAO {
	
	private PreparedStatement pstmt = null;
	private ResultSet rs = null;  
	
	//회원가입
	public int Signup(String id, String password, String name, String date, String gender, Connection con)
	{
		String sql = "INSERT INTO user(id, password, name, birth, gender) VALUES (?,?,?,?,?)";
		try
		{    
            pstmt = con.prepareStatement(sql);
           
            java.sql.Date birth = java.sql.Date.valueOf(date);
            
            pstmt.setString(1, id);
            pstmt.setString(2, password);
            pstmt.setString(3, name);
            pstmt.setDate(4, birth);
            pstmt.setString(5, gender);

            if(pstmt.executeUpdate() !=1)
            {
                return 0;
            }       
            return 1;
        }
		catch(Exception e)
		{
			e.printStackTrace();
			return 0;
		}        
    }
	
	//로그인
	public int Login(String id, String password, Connection con)
	{
		String sql = "SELECT password FROM user WHERE id = ?";
		try
		{
            pstmt = con.prepareStatement(sql);
           
            pstmt.setString(1, id);
            
            rs = pstmt.executeQuery();
            if (rs.next()) 
            {
               if (rs.getString(1).equals(password))
            	   return 1;		//로그인 성공
               else
            	   return 0;	//비밀번호 불일치
            } 
            return -1;	//아이디가 없음
        }
		catch(SQLException e)
		{
			e.printStackTrace();
			return -2;	//오류
		} 
		finally 
		{
            if (rs != null) 
            {
                try 
                {
                    rs.close();
                } 
                catch (SQLException e) 
                {
                    e.printStackTrace();
                }
            }
            if (pstmt != null) 
            {
                try 
                {
                	pstmt.close();
                }
                catch (SQLException e) 
                {
                    e.printStackTrace();
                }
            }
		} 
	}

	//글 작성
	public int Post(String title, String content, String postdate, String id, Connection con)
	{
		String sql = "INSERT INTO post(title, content, posted, user_id) VALUES (?,?,?,?)";
		try
		{    
            pstmt = con.prepareStatement(sql);
           
            java.sql.Date posted = java.sql.Date.valueOf(postdate);
            
            pstmt.setString(1, title);
            pstmt.setString(2, content);
            pstmt.setDate(3, posted);
            pstmt.setString(4, id);

            if(pstmt.executeUpdate() !=1)
            {
                return 0;
            }       
            return 1;
        }
		catch(Exception e)
		{
			e.printStackTrace();
			return 0;
		}        
    }

	//글 삭제
	public int DeletePost(String title, Connection con)
	{
		String sql = "Delete from post where title = ?";
		try
		{
            pstmt = con.prepareStatement(sql);
           
            pstmt.setString(1, title);
            
            if(pstmt.executeUpdate() !=1)
            {
                return 0;
            }       
            return 1;
        }
		catch(Exception e)
		{
			e.printStackTrace();
			return 0;
		}  
	}
	
	//댓글 작성
	public int Comment(int post_num, String user_id, String content, String comdate, Connection con)
	{
		String sql = "INSERT INTO comment(post_num, user_id, content, commented) VALUES (?,?,?,?)";
		try
		{    
            pstmt = con.prepareStatement(sql);
           
            java.sql.Date commented = java.sql.Date.valueOf(comdate);
            
            pstmt.setInt(1, post_num);
            pstmt.setString(2, user_id);
            pstmt.setString(3, content);
            pstmt.setDate(4, commented);

            if(pstmt.executeUpdate() !=1)
            {
                return 0;
            }       
            return 1;
        }
		catch(Exception e)
		{
			e.printStackTrace();
			return 0;
		}        
	}
	
	//댓글 삭제 
	public int DeleteComment(int num, Connection con)
	{
		String sql = "Delete from comment where num = ?";
		try
		{
            pstmt = con.prepareStatement(sql);
           
            pstmt.setInt(1, num);
            
            if(pstmt.executeUpdate() !=1)
            {
                return 0;
            }       
            return 1;
        }
		catch(Exception e)
		{
			e.printStackTrace();
			return 0;
		}  
	}
}
